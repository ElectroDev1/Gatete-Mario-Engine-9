/// @description Ferris Platform

/*
//  This item uses creation code.
//
//  turn        = Set the direction of the platforms
//      1       =       Clockwise
//      -1      =       Counter-Clockwise
//
//	spd			= Speed of the platforms
//  amount      = Amount of platforms
//  distance    = Distance between platform and center
*/

//Default values
turn = 1;
spd = 1;
amount = 3;
distance = 48;

//Depth
depth = 10;

//Platform angle
angle = 45;

//Create platforms
alarm[0] = 2;

//Activate platforms
active = false;